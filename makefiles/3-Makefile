CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = School
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) main.o school.o

fclean:
	$(RM) *~ $(NAME)
	$(RM) main.o school.o

re:
	$(RM) -f main.o school.o
	gcc -c -o main.o main.c
	gcc -c -o school.o school.c
	gcc main.o school.o -o school
